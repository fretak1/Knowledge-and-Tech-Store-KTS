{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@client/*": [
        "./*"
      ],
      "@server/*": [
        "../Server/*"
      ],
      "next-auth": [
        "./node_modules/next-auth"
      ],
      "next-auth/*": [
        "./node_modules/next-auth/*"
      ],
      "zod": [
        "./node_modules/zod"
      ],
      "bcryptjs": [
        "./node_modules/bcryptjs"
      ],
      "@prisma/client": [
        "../Server/node_modules/@prisma/client"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "../Server/**/*.ts",
    "../Server/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
