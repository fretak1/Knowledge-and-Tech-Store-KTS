generator client {
  provider = "prisma-client-js"
}

generator client_frontend {
  provider = "prisma-client-js"
  output   = "../../Client/node_modules/.prisma/client"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  phone         String?
  passwordHash  String?
  department    String?
  batch         String?
  profileImage  String?   // Cloudinary URL
  role          String    @default("STUDENT") // STUDENT, MEMBER, ADMIN
  github        String?
  linkedin      String?
  telegram      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  resetCode           String?
  resetCodeExpires    DateTime?

  // Relations
  studentTasks     Task[] @relation("StudentTasks")
  memberTasks      Task[] @relation("MemberTasks")
  notifications Notification[]
  applications Application[]
  shifts       Shift[]
  recurringShifts RecurringShift[]
}


model Task {
  id           String   @id @default(cuid())
  title        String
  description  String
  device       String   @default("PC") // PC, Phone, Tablet
  manufacturer String   @default("Unknown")
  serialNumber String   @default("N/A")
  status       String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED
  studentId    String
  memberId     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  student     User     @relation("StudentTasks", fields: [studentId], references: [id])
  member      User?    @relation("MemberTasks", fields: [memberId], references: [id])
}


model Comment {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  details     String   @db.Text
  icon        String   // Emoji or icon identifier
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Guide {
  id          String   @id @default(cuid())
  title       String
  description String
  video       String   // Can be a Cloudinary URL from upload or a direct link
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  location    String
  type        String
  imageUrl    String?     // Cloudinary URL for event image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  content     String   @db.Text
  imageUrls   String[] // Array of Cloudinary URLs
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum MessageStatus {
  UNREAD
  READ
  ARCHIVED
}

model Message {
  id        String        @id @default(cuid())
  name      String
  message   String        @db.Text
  statusForMember MessageStatus @default(UNREAD)
  statusForAdmin MessageStatus @default(UNREAD)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Notification {
  id          String   @id @default(cuid())
  userId      String   // The recipient (Student)
  message     String   // e.g., "Your PC repair task has been finished."
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model ApplicationConfig {
  id        String   @id @default("config")
  isOpen    Boolean  @default(false)
}

model Application {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String
  department  String
  batch       String
  reason      String   @db.Text
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  userId      String?
  createdAt   DateTime @default(now())

  user        User?    @relation(fields: [userId], references: [id])
}

model Shift {
  id        String   @id @default(cuid())
  date      DateTime
  startTime String
  endTime   String
  status    String   @default("ASSIGNED")
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User?    @relation(fields: [userId], references: [id])
}

model RecurringShift {
  id        String   @id @default(cuid())
  dayOfWeek Int      // 0=Sunday, 1=Monday, ..., 6=Saturday
  startTime String
  endTime   String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}